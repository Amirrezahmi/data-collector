<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/contactUsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact us"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello everyone," />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to our app! We designed this platform to enable you to create your own dataset based on your questions and answers. If you have seen my Zozo assistant project, you know the importance of this type of dataset. Link of Zozo project: https://github.com/Amirrezahmi/Zozo-Assistant" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/picture11" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A simple smile. That's the start of opening your heart and being compassionate to others. -Dalai Lama" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/picture22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To access your dataset, please use the password &quot;aassdd&quot;." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you for your support and participation." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best regards," />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amirreza." />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>